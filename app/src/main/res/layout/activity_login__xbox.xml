<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rafa.games.Login_Xbox"
    android:background="#FFFFFF"
    >

   <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        app:srcCompat="@drawable/xbox" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginTop="41dp"
        android:text="Login" />

    <EditText
        android:id="@+id/nombre_usuario_txt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView21"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:ems="10"
        android:inputType="textPersonName" />

 <EditText
     android:id="@+id/password_usuario_txt"
     android:layout_width="300dp"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@+id/nombre_usuario_txt"
     android:layout_alignStart="@+id/nombre_usuario_txt"
     android:layout_below="@+id/nombre_usuario_txt"
     android:layout_marginTop="42dp"
     android:ems="10"
     android:inputType="textPassword" />

    <Button
        android:id="@+id/ingresar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_usuario_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Ingresar" />

    <TextView
        android:id="@+id/registrar_usuario_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingresar_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#000080"
        android:text="¿Aun no tienes cuenta?  Regístrate"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recuperar_password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registrar_usuario_txt"
        android:layout_alignStart="@+id/registrar_usuario_txt"
        android:layout_below="@+id/registrar_usuario_txt"
        android:layout_marginTop="11dp"
        android:textColor="#000080"
        android:textSize="12sp"
        android:text="¿Olvidaste tu contraseña? Recupérala" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password_usuario_txt"
        android:layout_alignStart="@+id/password_usuario_txt"
        android:layout_below="@+id/nombre_usuario_txt"
        android:layout_marginTop="26dp"
        android:text="Contraseña" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nombre_usuario_txt"
        android:layout_alignStart="@+id/nombre_usuario_txt"
        android:layout_marginTop="225dp"
        android:text="Usuario" />

</RelativeLayout>
